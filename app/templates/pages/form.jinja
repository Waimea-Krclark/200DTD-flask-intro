{% extends "pages/base.jinja" %}

{% block title %}
    Flask Demo - Form
{% endblock %}

{% block content%}
    <article>
        <h2>Wow a form...</h2>

        <form method="POST" action="/processForm/">
            <fieldset>
                <label>
                    <h4>Name:</h4>
                    <input type="text" name="name" placeholder="Enter your name" required/>
                </label>
                <label>
                    <h4>Age:</h4>
                    <input type="number" name="age" placeholder="Enter your age" min='0' max='100' required/>
                </label>
            </fieldset>

            <input type="submit" value="Submit"/>
        </form>
    </article>
{% endblock %}